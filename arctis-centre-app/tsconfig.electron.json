{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "module": "CommonJS",
    "moduleResolution": "Node",
    "outDir": ".electron-build",
    "lib": [
      "ES2022",
      "DOM"
    ],
    "types": [
      "node",
      "electron"
    ],
    "esModuleInterop": true,
    "skipLibCheck": true,
    "jsx": "preserve",
    "allowJs": false,
    "paths": {
      "@shared/*": [
        "shared/*"
      ]
    }
  },
  "include": [
    "electron/**/*.ts",
    "shared/**/*.ts"
  ]
}
