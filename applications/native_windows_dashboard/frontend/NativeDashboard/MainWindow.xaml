<Window x:Class="NativeDashboard.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Width="780"
        Height="640"
        ResizeMode="NoResize"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        ShowInTaskbar="False"
        Topmost="True">
  <Border CornerRadius="16" BorderThickness="1" BorderBrush="#33FFFFFF" Background="#C90C1016" Padding="10">
    <Grid>
      <Grid.RowDefinitions>
        <RowDefinition Height="Auto"/>
        <RowDefinition Height="Auto"/>
        <RowDefinition Height="Auto"/>
        <RowDefinition Height="*"/>
      </Grid.RowDefinitions>

      <Grid Grid.Row="0" Margin="0,0,0,8">
        <Grid.ColumnDefinitions>
          <ColumnDefinition Width="*"/>
          <ColumnDefinition Width="Auto"/>
        </Grid.ColumnDefinitions>
        <StackPanel Orientation="Horizontal">
          <TextBlock Text="Arctis Dashboard" FontSize="16" FontWeight="SemiBold"/>
          <TextBlock x:Name="StatusText" Margin="10,2,0,0" Foreground="#FFA8B2BF" Text="starting..." VerticalAlignment="Center"/>
        </StackPanel>
        <TextBlock Grid.Column="1" Text="Ctrl+Alt+F10" Foreground="#FF8E99A6" VerticalAlignment="Center"/>
      </Grid>

      <StackPanel Grid.Row="1" Margin="0,0,0,8">
        <TextBlock x:Name="ConnectionText" FontWeight="SemiBold" Text="connected=N/A wireless=N/A bluetooth=N/A"/>
        <TextBlock x:Name="ModesText" Margin="0,2,0,0" Text="ANC=N/A mute=N/A sidetone=N/A"/>
        <TextBlock x:Name="LiveText" Margin="0,2,0,0" Text="chat mix=N/A OLED brightness=N/A"/>
      </StackPanel>

      <Grid Grid.Row="2" Margin="0,0,0,8">
        <Grid.ColumnDefinitions>
          <ColumnDefinition Width="*"/>
          <ColumnDefinition Width="*"/>
          <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <Border Grid.Column="0" Margin="0,0,8,0" Padding="8" CornerRadius="10" Background="#1DFFFFFF" BorderBrush="#30FFFFFF" BorderThickness="1">
          <StackPanel>
            <TextBlock Text="Headset Battery" Foreground="#FFB7C2D0"/>
            <ProgressBar x:Name="HeadsetBatteryBar" Height="8" Minimum="0" Maximum="100" Margin="0,6,0,2"/>
            <TextBlock x:Name="HeadsetBatteryText" Text="N/A"/>
          </StackPanel>
        </Border>

        <Border Grid.Column="1" Margin="4,0,4,0" Padding="8" CornerRadius="10" Background="#1DFFFFFF" BorderBrush="#30FFFFFF" BorderThickness="1">
          <StackPanel>
            <TextBlock Text="Base Battery" Foreground="#FFB7C2D0"/>
            <ProgressBar x:Name="BaseBatteryBar" Height="8" Minimum="0" Maximum="100" Margin="0,6,0,2"/>
            <TextBlock x:Name="BaseBatteryText" Text="N/A"/>
          </StackPanel>
        </Border>

        <Border Grid.Column="2" Margin="8,0,0,0" Padding="8" CornerRadius="10" Background="#1DFFFFFF" BorderBrush="#30FFFFFF" BorderThickness="1">
          <StackPanel>
            <TextBlock Text="Headset Volume" Foreground="#FFB7C2D0"/>
            <ProgressBar x:Name="HeadsetVolumeBar" Height="8" Minimum="0" Maximum="100" Margin="0,6,0,2"/>
            <TextBlock x:Name="HeadsetVolumeText" Text="N/A"/>
          </StackPanel>
        </Border>
      </Grid>

      <Border Grid.Row="3" BorderBrush="#2AFFFFFF" BorderThickness="1" CornerRadius="10" Padding="8" Background="#12000000">
        <ScrollViewer VerticalScrollBarVisibility="Auto">
          <WrapPanel x:Name="ChannelsPanel" Orientation="Horizontal"/>
        </ScrollViewer>
      </Border>
    </Grid>
  </Border>
</Window>
