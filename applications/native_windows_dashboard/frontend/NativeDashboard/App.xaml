<Application x:Class="NativeDashboard.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             ShutdownMode="OnExplicitShutdown">
  <Application.Resources>
    <SolidColorBrush x:Key="{x:Static SystemColors.WindowBrushKey}" Color="#FF12161D"/>
    <SolidColorBrush x:Key="{x:Static SystemColors.HighlightBrushKey}" Color="#FF334455"/>
    <SolidColorBrush x:Key="{x:Static SystemColors.ControlBrushKey}" Color="#FF161B24"/>
    <SolidColorBrush x:Key="{x:Static SystemColors.ControlTextBrushKey}" Color="#FFF2F7FD"/>
    <Style TargetType="TextBlock">
      <Setter Property="Foreground" Value="#E9EEF5"/>
      <Setter Property="FontFamily" Value="Segoe UI Variable Text"/>
      <Setter Property="FontSize" Value="12"/>
    </Style>
    <Style TargetType="CheckBox">
      <Setter Property="Foreground" Value="#E9EEF5"/>
      <Setter Property="FontFamily" Value="Segoe UI Variable Text"/>
      <Setter Property="Margin" Value="0,0,6,0"/>
    </Style>
    <Style TargetType="ComboBox">
      <Setter Property="Foreground" Value="#ECF3FC"/>
      <Setter Property="Background" Value="#D2141921"/>
      <Setter Property="BorderBrush" Value="#5A6F86"/>
      <Setter Property="BorderThickness" Value="1"/>
      <Setter Property="Padding" Value="5,3"/>
      <Setter Property="FontFamily" Value="Segoe UI Variable Text"/>
      <Setter Property="FontSize" Value="12"/>
      <Setter Property="MinHeight" Value="28"/>
    </Style>
    <Style TargetType="ComboBoxItem">
      <Setter Property="Foreground" Value="#F2F7FD"/>
      <Setter Property="Background" Value="#FF131820"/>
      <Setter Property="Padding" Value="6,4"/>
      <Setter Property="FontFamily" Value="Segoe UI Variable Text"/>
      <Style.Triggers>
        <Trigger Property="IsHighlighted" Value="True">
          <Setter Property="Background" Value="#FF273443"/>
          <Setter Property="Foreground" Value="#FFFFFFFF"/>
        </Trigger>
        <Trigger Property="IsSelected" Value="True">
          <Setter Property="Background" Value="#FF375068"/>
          <Setter Property="Foreground" Value="#FFFFFFFF"/>
        </Trigger>
      </Style.Triggers>
    </Style>
    <Style TargetType="Slider">
      <Setter Property="Foreground" Value="#72C9FF"/>
      <Setter Property="Background" Value="#2C3A48"/>
      <Setter Property="Height" Value="18"/>
      <Setter Property="VerticalAlignment" Value="Center"/>
    </Style>
    <Style TargetType="ProgressBar">
      <Setter Property="Foreground" Value="#5CC8FF"/>
      <Setter Property="Background" Value="#3A4654"/>
      <Setter Property="Height" Value="8"/>
      <Setter Property="BorderThickness" Value="0"/>
    </Style>
  </Application.Resources>
</Application>
